<%- include('../header',{title: 'Quản lý bài viết'}) %> 
    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        <%- include ../sidebar %> 
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                <%- include ../topbar %> 
                <!-- End of Topbar -->

                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->
                    <h1 class="h3 mb-2 text-gray-800">Tables</h1>
                    <!-- DataTales Example -->
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">Post</h6>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                    <thead>
                                        <tr>
                                            <th>Mã</th>
                                            <th>Tiêu đề</th>
                                            <th>Nội dung</th>
                                            <th>Danh mục</th>
                                            <th>Tác giả</th>
                                            <th>Sửa đổi</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% if (data) { %>
                                         <% data.forEach(item => { %>
                                            <tr>
                                                <th scope="row"><%= item.idpost %> </th>
                                                <td><%= item.title %></td>
                                                <td><%= item.pre.slice(0,100) %> ...</td>
                                                <td><%= item.categoryName %></td>
                                                <td><%= item.authorName %></td>
                                                <% 
                                                  var updated_at = item.updated_at;
                                                  var year = updated_at.getFullYear();
                                                  var month = updated_at.getMonth() + 1;
                                                  var day = updated_at.getDate();
                                                  updated_at = day + '/' + month + '/' + year;
                                                %> 
                                                <td><%= updated_at %></td>
                                                <td>
                                                    <a href="/admin/post/<%= item.idpost %>" class="btn btn-info" >Chi tiết</a>
                                                    
                                                    <a href="#" class="btn btn-danger post-dl" data-toggle="modal" data-target="#modelDelete" data-idpost="<%= item.idpost %>">Xóa</a>
                                                </td>
                                            </tr>
                                         <% }) %>
                                        <% } %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->

            <!-- Footer -->
            <%- include ../topfooter %> 
            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>
    <form method="POST" name="form-delete"></form>
    <!-- Modal -->
    <div class="modal fade" id="modelDelete" tabindex="-1" aria-labelledby="modelLabel" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="modelLabel">Xóa bài viết</h5>
            <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">×</span>
            </button>
          </div>
          <div class="modal-body">
            Bạn có chắc muốn xóa bài viết này?
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-danger btn-delete">Xác nhận</button>
            <button class="btn btn-secondary" type="button" data-dismiss="modal">Hủy bỏ</button>
          </div>
        </div>
      </div>
    </div>
<%- include('../footer') %> 
<!-- Page level plugins -->
<script src="/assets/vendor/datatables/jquery.dataTables.min.js"></script>
<script src="/assets/vendor/datatables/dataTables.bootstrap4.min.js"></script>

<!-- Page level custom scripts -->
<script src="/assets/js/demo/datatables-demo.js"></script>
<script src="/assets/js/post.js"></script>
