<%- include('header') %>
<div class="container mt-5 p-5">
    <div class="row">
        <div class="col-md-5 mx-auto">
        <div id="first">
            <div class="myform form ">
                 <div class="logo mb-3">
                     <div class="col-md-12 text-center">
                        <h1>Đăng nhập</h1>
                     </div>
                </div>
               <form action="/login" method="post" name="login">
                       <div class="form-group">
                          <label for="accountName">Tên đăng nhập</label>
                          <input type="text" name="accountName"  class="form-control" id="accountName" placeholder="Nhập tên đăng nhập..." value="<%= values.name %>">
                          <% if (err) { %>
                           <label class="text-danger"><%= err.errName %> </label>
                          <% } %>
                          
                       </div>
                       <div class="form-group">
                          <label for="pass">Mật khẩu</label>
                          <input type="password" name="pass" id="pass"  class="form-control"placeholder="Nhập mật khẩu..." value="<%= values.pass %>">
                          <% if (err) { %>
                           <label class="text-danger"><%= err.errPass %> </label>
                          <% } %>
                       </div>
                       <div class="col-md-12 text-center ">
                          <button type="submit" class=" btn btn-block mybtn btn-primary tx-tfm mt-3 mb-3">Đăng nhập</button>
                       </div>
                       
                       <div class="form-group">
                          <p class="text-center">Bạn không có tài khoản? <a href="#" id="signup">Đăng ký</a></p>
                       </div>
                    </form>
             
            </div>
        </div>
        </div>
    </div>
  </div>   
     
